
<MudGrid Class="" Spacing="2" Justify="Justify.Center">
    @if (Movie.Count == 0){
        for (var i = 0; i < 20; i++)
        {
            <Skeleton/>
        }
        }
        else
        {
            @foreach (var items in Movie)
            {
                <IndividualMovies Movie="items"/>
            }
    }
</MudGrid>



@code {
    private const string PosterUrl = "https://www.themoviedb.org/t/p/w220_and_h330_face/";
    [Parameter] public List<Movie> Movie { get; set; }
}